menu "Board Selection"

visible if n

help
    Board selection is autogenerated and don't be selected directly

config BOARD_DUAL_EYES_BOARD_V1_0
    bool "dual_eyes_board_v1_0"
    help
        Use dual_eyes_board_v1_0 board configuration.

config BOARD_ECHOEAR_CORE_BOARD_V1_0
    bool "echoear_core_board_v1_0"
    help
        Use echoear_core_board_v1_0 board configuration.

config BOARD_ECHOEAR_CORE_BOARD_V1_2
    bool "echoear_core_board_v1_2"
    default y
    help
        Use echoear_core_board_v1_2 board configuration.

config BOARD_ESP32_C5_SPOT
    bool "esp32_c5_spot"
    help
        Use esp32_c5_spot board configuration.

config BOARD_ESP32_P4_FUNCTION_EV
    bool "esp32_p4_function_ev"
    help
        Use esp32_p4_function_ev board configuration.

config BOARD_ESP32_S3_KORVO2_V3
    bool "esp32_s3_korvo2_v3"
    help
        Use esp32_s3_korvo2_v3 board configuration.

config BOARD_ESP32_S3_KORVO2L
    bool "esp32_s3_korvo2l"
    help
        Use esp32_s3_korvo2l board configuration.

config BOARD_ESP_BOX_3
    bool "esp_box_3"
    help
        Use esp_box_3 board configuration.

config BOARD_LYRAT_MINI_V1_1
    bool "lyrat_mini_v1_1"
    help
        Use lyrat_mini_v1_1 board configuration.

config BOARD_M5STACK_CORES3
    bool "m5stack_cores3"
    help
        Use m5stack_cores3 board configuration.

config BOARD_NAME
    string
    default "dual_eyes_board_v1_0" if BOARD_DUAL_EYES_BOARD_V1_0
    default "echoear_core_board_v1_0" if BOARD_ECHOEAR_CORE_BOARD_V1_0
    default "echoear_core_board_v1_2" if BOARD_ECHOEAR_CORE_BOARD_V1_2
    default "esp32_c5_spot" if BOARD_ESP32_C5_SPOT
    default "esp32_p4_function_ev" if BOARD_ESP32_P4_FUNCTION_EV
    default "esp32_s3_korvo2_v3" if BOARD_ESP32_S3_KORVO2_V3
    default "esp32_s3_korvo2l" if BOARD_ESP32_S3_KORVO2L
    default "esp_box_3" if BOARD_ESP_BOX_3
    default "lyrat_mini_v1_1" if BOARD_LYRAT_MINI_V1_1
    default "m5stack_cores3" if BOARD_M5STACK_CORES3

endmenu


